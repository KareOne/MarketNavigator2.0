# MarketNavigator v2 - Environment Configuration
# Copy to .env and fill in your credentials

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=1

# =============================================================================
# Database (PostgreSQL - Remote Liara)
# =============================================================================
DB_HOST=table-mountain.liara.cloud
DB_PORT=32965
DB_NAME=postgres
DB_USER=root
DB_PASSWORD=your-db-password

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# S3 Storage (MinIO for local, AWS S3 for production)
# =============================================================================
USE_S3=True
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_STORAGE_BUCKET_NAME=marketnavigator-files
AWS_S3_ENDPOINT_URL=http://minio:9000
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# OpenAI API (for AI reports and chat)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4

# =============================================================================
# SCRAPER CONFIGURATION
# 
# IMPORTANT: The scraper APIs have their own configuration files:
#   - Crunchbase: scrapers/Crunchbase_API/.env
#   - Tracxn: scrapers/Tracxn_API/config.py
#
# These files contain:
#   - Login credentials for the scraping accounts
#   - Remote MySQL database connections (Liara)
#   - Proxy settings
#   - 2Captcha API keys
#
# No need to configure anything here - just edit those files directly.
# =============================================================================

# Scraper API URLs (Internal Docker Network - no changes needed)
CRUNCHBASE_SCRAPER_URL=http://crunchbase_api:8003
TRACXN_SCRAPER_URL=http://tracxn_api:8008

# =============================================================================
# CORS & Hosts
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000
